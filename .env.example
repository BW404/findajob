# FindAJob Nigeria - Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=findajob_ng
DB_USER=root
DB_PASS=

# Dojah API Configuration
# Get your credentials from https://dojah.io/dashboard
DOJAH_APP_ID=your_app_id_here
DOJAH_API_KEY=your_api_key_here
DOJAH_API_URL=https://sandbox.dojah.io/api/v1

# In production, use the live API
# DOJAH_API_URL=https://api.dojah.io/api/v1

# Email Configuration (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Site Configuration
SITE_URL=http://localhost/findajob
SITE_EMAIL=noreply@findajob.ng

# Development Mode
DEV_MODE=true
DEV_EMAIL_CAPTURE=true
