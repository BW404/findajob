# Allow access to uploaded CV files
# Allow PDF, DOC, and DOCX files to be viewed/downloaded
<FilesMatch "\.(pdf|doc|docx)$">
    Require all granted
</FilesMatch>

# Prevent execution of any scripts in this directory
<FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
    Require all denied
</FilesMatch>

# Disable directory browsing
Options -Indexes

# Prevent access to sensitive file types
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|config)$">
    Require all denied
</FilesMatch>