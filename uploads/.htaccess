# Prevent direct access to uploaded files
# Allow access only through PHP scripts with proper authentication

# Deny access to all files by default
<Files "*">
    Require all denied
</Files>

# Allow access to PDF, DOC, and DOCX files only through authorized scripts
<FilesMatch "\.(pdf|doc|docx)$">
    # This will be handled by PHP authentication
    Require all denied
</FilesMatch>

# Prevent execution of any scripts in this directory
<FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
    Require all denied
</FilesMatch>

# Disable directory browsing
Options -Indexes

# Prevent access to sensitive file types
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|config)$">
    Require all denied
</FilesMatch>